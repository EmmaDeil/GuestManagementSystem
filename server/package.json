   {
  "name": "guest-management-server",
  "version": "1.0.0",
  "description": "Express.js backend for Guest Management App",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rmdir /s /q dist 2>nul && tsc || tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "seed:demo": "cross-env NODE_ENV=development ts-node src/scripts/seed-demo.ts",
    "seed:demo:prod": "cross-env NODE_ENV=production ts-node src/scripts/seed-demo.ts",
    "check:mongodb": "cross-env NODE_ENV=development ts-node src/scripts/check-mongodb.ts",
    "check:mongodb:prod": "cross-env NODE_ENV=production ts-node src/scripts/check-mongodb.ts",
    "setup": "npm run check:mongodb && npm run seed:demo",
    "setup:prod": "npm run check:mongodb:prod && npm run seed:demo:prod",
    "debug:env": "node -e \"console.log('NODE_ENV:', process.env.NODE_ENV); console.log('PORT:', process.env.PORT); console.log('MONGODB_URI:', process.env.MONGODB_URI ? 'set' : 'not set'); console.log('JWT_SECRET:', process.env.JWT_SECRET ? 'set' : 'not set');\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "guest-management",
    "express",
    "typescript",
    "qr-code"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.6.2",
    "@types/nodemailer": "^7.0.2",
    "@types/qrcode": "^1.5.5",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.3",
    "nodemailer": "^7.0.6",
    "qrcode": "^1.5.4",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2"
  }
}
